<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/progres"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin20">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_white_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin10"
            android:paddingRight="@dimen/margin30">

            <squats.movieapp.utility.ProgressWheel
                android:id="@+id/progress_wheel"
                android:layout_width="@dimen/margin80"
                android:layout_height="@dimen/margin80"
                android:layout_centerHorizontal="true"
                wheel:matProg_barColor="@color/header_home"
                wheel:matProg_linearProgress="true"
                wheel:matProg_progressIndeterminate="true"
                wheel:matProg_rimColor="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please wait..."
                android:textColor="@color/header_home"
                android:textSize="@dimen/text_size15" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>